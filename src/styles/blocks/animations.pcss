.root {
  padding: 20px;
}

.list-wrapper {
  height: 300Px;
  overflow: hidden;
  position: relative;
}

.item {
  overflow: hidden;
}

.item-wrapper {
  width: 300Px;
  height: 100Px;
}

.item img {
  object-fit: cover;
  width: 100%;
  height: 100%;
}

.list {
  position: absolute;
  width: 300Px;
  top: 0;
  left: 0;
  right: 0;

  &.transition {
    transition: 1s;
  }
}

.fade {
  opacity: 0;
  transition: 1s;
}

.outside {
  position: absolute;
  bottom: 100%;
}
